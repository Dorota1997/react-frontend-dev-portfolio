name: deploy to S3 

on: 
  push: 
  branches: 
    - master 

jobs: 
  build-personalwebsite: 
    runs-on: ubuntu-latest
    steps: 
      - name: checkout code 
        usees: action/checkout@v3
      - name: Install node
        uses: action/setup-node@v3
          with: "16"
      - name: install required dependencies 
        run: npm install 
      - name: Build app 
        run: npm run build
      - name: Configure Aws Cred 
        ueses: aws-actions/confgure-aws-credentials@v1
          with: 
          aws-access-key-id: ${{secrets.AWS_ACCESS_KEY_ID}}
          aws-secrect-access-key: ${{sercets.AWS_SECERTS_ACCESS_KEY}}
          aws-region: us-east-1 
      - name: Synce to aws S3
        run: aws s3 sync ./dist/  s3://ark31.info
